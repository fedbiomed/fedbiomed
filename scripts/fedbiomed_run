#!/bin/bash
#
# run a specific component of fedbiomed
#

# detect how the file is run
([[ -n $ZSH_EVAL_CONTEXT && $ZSH_EVAL_CONTEXT =~ :file$ ]] ||
 [[ -n $KSH_VERSION && $(cd "$(dirname -- "$0")" &&
    printf '%s' "${PWD%/}/")$(basename -- "$0") != "${.sh.file}" ]] ||
 [[ -n $BASH_VERSION ]] && (return 0 2>/dev/null)) && sourced=1 || sourced=0

[[ "${sourced}" == "1" ]] && echo "This file MUST NOT be sourced" && return



echo -e "\n\n${BLD}${YLW}DEPRECATION WARNING!:${NC}\n ./fedbiomed_run script is deprecated,and will be removed in the future releases. Please use command 'fedbiomed' directly.' \n\n" | tr -s ' '

python -m "fedbiomed.cli" "$@"

